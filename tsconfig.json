{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "removeComments": true,
    "noImplicitThis": false,
    "noEmit": true,
    "pretty": true,
    "strict": true,
    "watch": true,
    "baseUrl": "./",
    "outDir": "./",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "include": ["./docs", "./src", "./test"],
  "exclude": ["./node_modules/**/*"]
}
